<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    android:layout_height="match_parent"

     >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="12dp"
                android:background="#ffffff"

                android:text="可拖动的gridview"
                android:id="@+id/bt_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt_quickreturn"
                android:text="quickreturn"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="jni1"
                android:id="@+id/bt_jni1"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="tclip"
                android:id="@+id/bt_tclip"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:text="crouton"
                    android:id="@+id/bt_crouton"
                    android:layout_margin="3dp"
                    android:background="#ffffff"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_margin="3dp"
                    android:background="#ffffff"
                    android:id="@+id/bt_wel"
                    android:text="welcom"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                </LinearLayout>

            <Button
                android:text="loadingprogresbar"
                android:background="#ffffff"
                android:layout_margin="12dp"
                android:id="@+id/bt_loadingprogresbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="DragTopLayout"
                android:background="#ffffff"
                android:layout_margin="12dp"
                android:id="@+id/bt_DragTopLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_smoothprogressbar"
                android:text="smoothprogressbar"
                android:background="#ffffff"
                android:layout_margin="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_RetalsPull"
                    android:layout_weight="1"
                    android:text="RetalsPull"
                    android:background="#ffffff"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/bt_refresh"
                    android:layout_weight="1"
                    android:text="refresh"
                    android:background="#ffffff"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/bt_zoke"
                    android:layout_weight="1"
                    android:text="zoke"
                    android:background="#ffffff"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bt_wandouindex"
                    android:layout_weight="1"
                    android:text="wandoui"
                    android:background="#ffffff"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/bt_slidemenu"
                    android:layout_weight="1"
                    android:text="slidemenu"
                    android:background="#ffffff"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/bt_appmsg"
                    android:layout_weight="1"
                    android:text="appmsg"
                    android:background="#ffffff"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            </LinearLayout>
        </ScrollView>



</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    android:layout_height="match_parent"

     >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="12dp"
                android:background="#ffffff"

                android:text="可拖动的gridview"
                android:id="@+id/bt_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt_quickreturn"
                android:text="quickreturn"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="jni1"
                android:id="@+id/bt_jni1"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="tclip"
                android:id="@+id/bt_tclip"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="crouton"
                android:id="@+id/bt_crouton"
                android:layout_margin="12dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="loadingprogresbar"
                android:background="#ffffff"
                android:layout_margin="12dp"
                android:id="@+id/bt_loadingprogresbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="null"
                android:background="#ffffff"
                android:layout_margin="12dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="null"
                android:background="#ffffff"
                android:layout_margin="12dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>



</LinearLayout>